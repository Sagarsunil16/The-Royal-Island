<style>
  /* General Section Styling */
  .module {
    padding: 60px 0;
    background-color: #f9f9f9;
  }

  .section-subtitle {
    color: #888;
    font-size: 18px;
    margin-bottom: 10px;
  }

  .module-title {
    font-size: 36px;
    margin-bottom: 40px;
    color: #333;
  }

  /* Activity Card Styling */
  .activity-card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
    margin-bottom: 10px;
  }

  .activity-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2);
  }

  .activity-card-img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }

  .activity-card-content {
    padding: 20px;
    text-align: center;
  }

  .activity-card-title {
    font-size: 24px;
    font-weight: 600;
    color: #333;
    margin-bottom: 15px;
  }

  .activity-card-desc {
    font-size: 14px;
    color: #666;
    margin-bottom: 20px;
  }

  .activity-card-btn {
    padding: 10px 20px;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
    background-color: #007bff;
    border-radius: 30px;
    color: #fff;
    text-decoration: none;
    transition: background-color 0.3s;
    margin: 10px;
  }

  .activity-card-btn:hover {
    background-color: #0056b3;
  }

 /* Center the modal content vertically and horizontally on all screen sizes */
.modal-dialog {
  display: flex;
  justify-content: center;   /* Horizontal centering */
  align-items: center;       /* Vertical centering */
  min-height: 100vh;          /* Full viewport height */
  margin: auto;               /* Ensure the modal remains centered */
}

/* Ensure the modal content has proper padding and rounded corners */
.modal-content {
  border-radius: 12px;        /* Optional: rounded corners */
  padding: 20px;              /* Optional: space inside the modal */
  background-color: #fff;     /* Optional: background color */
}


  /* Responsive Design */
  @media (max-width: 768px) {
    .activity-card-img {
      height: 200px;
    }
    .activity-card-title {
      font-size: 20px;
    }
    .activity-card-desc {
      font-size: 13px;
    }
  }
</style>


